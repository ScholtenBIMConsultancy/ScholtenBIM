<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clear Mark | Scholten BIM Consultancy"
        Height="280" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FFFDFDFD"
        FontSize="12">
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Scope -->
            <RowDefinition Height="Auto"/>  <!-- Telling -->
            <RowDefinition Height="*"/>     <!-- Uitleg -->
            <RowDefinition Height="Auto"/>  <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Scope keuze -->
        <GroupBox Header="Scope" Grid.Row="0" Margin="0,0,0,12">
            <StackPanel Margin="10,6,10,8">
                <RadioButton x:Name="rb_selection"  Content="Active Selection" IsChecked="True"/>
                <RadioButton x:Name="rb_activeview" Content="Active View"     Margin="0,6,0,0"/>
                <RadioButton x:Name="rb_wholemodel" Content="Whole Model"     Margin="0,6,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Preview telling -->
        <DockPanel Grid.Row="1" LastChildFill="True" Margin="0,0,0,12">
            <Button x:Name="btn_refresh"
                    Content="Ververs telling"
                    Width="120" Height="26"
                    Margin="0,0,10,0"
                    DockPanel.Dock="Left"/>
            <TextBlock x:Name="txt_count"
                       Text="Telling: —"
                       VerticalAlignment="Center"
                       Foreground="#333"/>
        </DockPanel>

        <!-- Uitleg -->
        <TextBlock Grid.Row="2" TextWrapping="Wrap" Foreground="#666">
            Deze tool wist uitsluitend elementen waarvan Mark gevuld is (Mark ≠ leeg).
            Kies de scope, bekijk de telling en klik op Uitvoeren.
        </TextBlock>

        <!-- Actie knoppen -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btn_cancel" Content="Annuleren" Width="100" Margin="0,0,8,0" IsCancel="True"/>
            <Button x:Name="btn_run"    Content="Uitvoeren" Width="110" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>