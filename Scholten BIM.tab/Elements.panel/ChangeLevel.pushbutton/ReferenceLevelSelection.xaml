<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Level | Scholten BIM Consultancy"
        SizeToContent="WidthAndHeight"
        Topmost="False"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <StackPanel Margin="10" HorizontalAlignment="Stretch">

        <!-- Label met aantal geselecteerde elementen -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label x:Name="label_selection" Content="0 elementen geselecteerd" Width="200" FontWeight="Bold"/>
        </StackPanel>

        <!-- Tekst boven pulldown -->
        <TextBlock Text="Selecteer gewenst level:" Margin="0,0,0,5" FontWeight="Bold"/>

        <!-- Pulldown + Apply knop -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <ComboBox x:Name="combobox_levels" DisplayMemberPath="Name" Width="250"/>
            <Button Content="Apply" Click="button_apply_click" Margin="10,0,0,0"/>
        </StackPanel>

    </StackPanel>
</Window>
